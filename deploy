version=$1
if [[ $version == "" ]]; then
  major=0
  minor=0
  patch=$(git tag -l | tail -1 | cut -d '.' -f3)
  patch=$((patch+1))
  version=v$major.$minor.$patch
fi
git tag -a $version -m "$version"
git checkout master
rm -fr dist/dist images temp .sass-cache scripts styles
mv dist/* .
git add .
git commit -m "Deploying $version"
git push --tags origin master
